---
import MusclesGroupSelector from "../../components/MusclesGroupSelector";
import TrainingEquipmentSelector from "../../components/TrainingEquipmentSelector";
import Layout from "../../layouts/Layout.astro"

const { id } = Astro.params;
let exercise;

if (id) {
    const res = await fetch(`http://localhost:8002/api/v1/exercises/${id}`); // cambiar a api para docker en vez de localhost
    exercise = await res.json();
    console.log(exercise);
}
---

<Layout title="GYM">
    {
        exercise.id ? (
            <div class="form">
                <div class="cont-filter lg:flex">
                    <div class="lg:w-2/3">
                        <MusclesGroupSelector initialSelectedMuscles={exercise?.muscles} client:only="react" />
                    </div>
                    <TrainingEquipmentSelector initialSelectedEquipment={exercise?.equipments} client:only="react" />
                </div>
                <div class="cont-input">
                    <form id="exercise-edit-form" enctype="multipart/form-data">
                        <div class="form-class">
                            <input class="inputs" type="text" id="exercise-name" value={exercise?.name} name="exercisename" placeholder="EXERCISE NAME" required>
                            <input class="inputs" type="number" id="calories-burned" value={exercise?.calories} name="caloriesburned" placeholder="CALORIES BURNED" required>
                        </div>
                        <div class="form-class">
                            <textarea class="inputs" id="description" name="description" rows="4" placeholder="EXERCISE DESCRIPTION (OPTIONAL)">{exercise?.description}</textarea>
                            <textarea class="inputs" id="comments" name="comments" rows="4" placeholder="COMMENTS FROM THE EXERCISE (OPTIONAL)">{exercise?.extra_data}</textarea>
                        </div>
                        <div class="form-class">
                            <img src={exercise?.url} />
                            <input type="file" name="file" accept="image/*, video/*">
                        </div>
                        <div class="buttons">
                            <a href="/">
                                <button id="back" type="button">back</button>
                            </a>
                            <button id="update-btn" type="submit">update</button>
                        </div>
                    </form>
                </div>
            </div>

        ) : (
            <div class=" text-4xl mt-40 text-center text-green-800">
                <h1>The exercise does not exists</h1>
                <h1>:(</h1>
                <h2 class="text-3xl text-gray-900 mt-12">Go back to the <a class=" text-blue-800" href="/">home page</a></h2>
            </div>
        )
    }
    
    <script type="module">
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('exercise-edit-form');
            let selectedMuscles = [];
            let selectedEquipment = [];

            form.addEventListener("submit", async (event) => {
                event.preventDefault();

                if (!validateForm(form)) {
                    return;
                }

                const formData = new FormData();
                formData.append('file', form.file.files[0]);
                formData.append('name', form.exercisename.value);
                formData.append('calories', form.caloriesburned.value);
                formData.append('description', form.description.value);
                formData.append('extra_data', form.comments.value);
                formData.append('muscles', selectedMuscles.join(';'));
                formData.append('equipments', JSON.stringify(selectedEquipment.map(equipment => equipment.id)));
                formData.append('user_id', 1);

                try {
                    const idExercise = window.location.pathname.split('/')[2];

                    const response = await fetch(`http://localhost:8002/api/v1/exercises/`+idExercise, {
                        method: 'PUT',
                        body: formData,
                    });

                    const result = await response.json();
                    if (response.status !== 200) {
                        alert(result.message);
                    }
                    window.location.href = '/';
                } catch (error) {
                    console.error('Error:', error);
                }
            });

            function validateForm(form) {
                const exercisename = form.exercisename.value;
                const caloriesburned = form.caloriesburned.value;
                const file = form.file.files[0];

                if (exercisename.length < 3) {
                    alert("El nombre del ejercicio debe tener al menos 3 caracteres");
                    return false;
                }

                if (caloriesburned.length < 1 || isNaN(caloriesburned)) {
                    alert("Las calorías quemadas deben tener al menos 1 carácter");
                    return false;
                }

                if (selectedMuscles.length < 1) {
                    alert("Debe seleccionar al menos un grupo muscular");
                    return false;
                }

                if (selectedEquipment.length < 1) {
                    alert("Debe seleccionar al menos un equipo");
                    return false;
                }

                if (!file || file.size > 10485760 || (!file.type.includes('image') && !file.type.includes('video'))) {
                    alert("El archivo no debe superar 10MB y debe ser imagen o video");
                    return false;
                }

                return true;
            }

            window.addEventListener('musclesSelectionChange', (event) => {
                selectedMuscles = event.detail;
            });

            window.addEventListener('equipmentSelectionChange', (event) => {
                selectedEquipment = event.detail;
            });
        });
    </script>
</Layout>

