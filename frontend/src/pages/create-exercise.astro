---
import ParentComponent from "../components/MusclesParent";
import TrainingEquipmentSelector from "../components/TrainingEquipmentSelector";
import Layout from "../layouts/Layout.astro"
---
<Layout title="GYM">
    <div class="form">
        <!--to do se deben cambiar las imagenes, por el filtro del cuerpo y las cosas necesarias para hacer ejercicio-->
        <div class="cont-subtit">
            <h2 class="subtitles" id="body-parts">USED BODY PARTS</h2>
            <h2 class="subtitles" id="objects">NECESSARY OBJECTS</h2>
        </div>
        <div class="cont-filter lg:flex">
			<div>
				<ParentComponent client:only="react" />
			</div>
			<TrainingEquipmentSelector client:only="react" />
			
            <!--<div class="muscles-img">
                <img src="/person-with-pencil.jpeg" class="imagen">
            </div>
            <div class="objects-img">
                <img src="/person-with-pencil.jpeg" class="imagen">
            </div>-->
        </div>
        <div class="cont-input">
            <form id="exercise-form" action="/upload" method="post" enctype="multipart/form-data">
                <div class="form-class">
                    <input class="inputs" type="text" id="exercise-name" name="exercisename" placeholder="EXERCISE NAME" required>
                    <input class="inputs" type="number" id="calories-burned" name="caloriesburned" placeholder="CALORIES BURNED" required>
                </div>
                <div class="form-class">
                    <textarea class="inputs" id="description" name="description" rows="4" placeholder="EXERCISE DESCRIPTION (OPTIONAL)"></textarea>
                    <textarea class="inputs" id="comments" name="comments" rows="4" placeholder="COMMENTS FROM THE EXERCISE (OPTIONAL)"></textarea>
                </div>
                <div class="form-class">
                    <input type="file" name="archive" accept="image/*, video/*">
                </div>
                <div class="buttons">
                    <a href="/">
                        <button id="back" type="button">back</button>
                    </a>
                    <button id="create-btn" type="submit">create</button>
                </div>
            </form>
        </div>
    </div>    

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('exercise-form');
            form.onsubmit = function(event) {
                if (!validateForm(form)) {
                    event.preventDefault();
                }
            };

            function validateForm(form) {
                const exercisename = form.exercisename.value;
                const caloriesburned = form.caloriesburned.value;

                if (exercisename.length < 3) {
                    alert("El nombre del ejercicio debe tener al menos 3 caracteres");
                    return false;
                }

                if (caloriesburned.length < 1) {
                    alert("Las calorías quemadas deben tener al menos 1 carácter");
                    return false;
                }

                return true;
            }
        });
    </script>
</Layout>

<style>     
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
        color: #333;
    }
    .form {
        width: 95%;
        margin: 2rem auto;
        padding: 2rem;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }
    .subtitles {
        font-size: 1.5rem;
        color: #28a745;
        margin-bottom: 1rem;
        text-align: center;
    }
    .cont-subtit {
        display: flex;
        justify-content: center;
        margin-bottom: 1rem;
    }
    .cont-filter {
        /*display: flex;*/
        justify-content: center;
        margin-bottom: 1rem;
    }
    .muscles-img, .objects-img {
        flex: 1;
        margin: 0 1rem;
    }
    .imagen {
        width: 100%;
        border-radius: 10px;
    }
    .form-class {
        display: flex;
        flex-direction: column;
        margin-bottom: 1rem;
    }
    .inputs {
        width: 100%;
        padding: 0.75rem;
        margin: 0.5rem 0;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 1rem;
    }
    .inputs:focus {
        border-color: #28a745;
        outline: none;
    }
    .buttons {
        display: flex;
        justify-content: space-between;
    }
    button {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
    #back {
        background-color: #6c757d;
        color: #fff;
    }
    #create-btn {
        background-color: #28a745;
        color: #fff;
    }
    @media (max-width: 768px) {
        .form {
            margin: 1rem;
            padding: 1rem;
        }
        .buttons {
            flex-direction: column;
        }
        #back, #create-btn {
            width: 100%;
            margin: 0.5rem 0;
        }
    }
</style>