import Layout from "../layouts/Layout.astro"
import Card from "../components/Card.astro"
---
<Layout title="GYM">
	<ul role="list" class="link-card-grid">
		<div class="caja">
			<a href="/rutina-inicio" class="a">
				<img src="./person-lifting-weight.jpeg" class="imagen" >
			</a>
			<Card
			href="/"
			title="INICIAR RUTINA"
			/>
		</div>
		<div class="caja" id="caja2">
			<a href="/create" class="a">
				<img src="/person-question.jpeg" class="imagen" >
