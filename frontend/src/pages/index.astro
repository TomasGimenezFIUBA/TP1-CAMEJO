---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Gym Workout">
	<main>
		<h1 class="text-gradient">Welcome to Gym Workout</h1>
		<p class="subtitle">
			Welcome to Gym Workout, a simple web app to help you track your workouts. You can create a workout, add exercises to it, and track your progress over time.
		</p>
		<section class="link-card-grid">
			<Card title="Your routines" body="Look at your routines." href='' />
			<Card title="Explore new routines" body="Explore different routines." href='' />
			<Card title="New exercise" body="Create new exercises." href='' />
		</section>
	</main>
</Layout>

<style>
	:root {
		--background-dark: #121212;
		--accent-color: #1DB954;
		--text-color: #FFFFFF;
		--card-background: #1E1E1E;
		--card-border: #e70d0d;
		--accent-gradient: linear-gradient(45deg, #1DB954, #1D88B5);
	}
	
	body {
		background-color: var(--background-dark);
		color: var(--text-color);
		font-family: 'Roboto', sans-serif;
		margin: 0;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
	
	main {
		flex: 1;
		margin: auto;
		padding: 2rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	
	footer {
		text-align: center;
		padding: 1rem;
		background-color: #1E1E1E;
		width: 100%;
	}
	
	h1 {
		font-size: 2.5rem;
		font-weight: 700;
		text-align: center;
		margin-bottom: 1.5rem;
	}
	
	.subtitle {
		font-size: 1.2rem;
		text-align: center;
		margin-bottom: 2.5rem;
	}
	
	.text-gradient {
		background: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 200%;
		animation: gradient-animation 3s infinite linear;
	}
	
	@keyframes gradient-animation {
		0% { background-position: 0%; }
		100% { background-position: 200%; }
	}
	
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 1.5rem;
		width: 100%;
	}
</style>