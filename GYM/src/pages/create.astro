---
import Layout from "../layouts/Layout.astro"
import Header from "../components/Header.astro"
---
<Layout title="GYM">
	<main>
		<Header/>
		<body>
			<div class="form">
				<section>
					<input type="text" id="exercise-name" name="exercise-name" placeholder="exercise name">
				</section>
				<form class="list">
					Used muscle
					<select>
						<option>biceps</option>
						<option>triceps</option>
						<option>ABS</option>
						<option>calf</option>
						<option>stretching</option>
					</select>
				</form>
				<div class="buttons">
					<button id="back">back</button>
					<button id="create">create</button>
				</div>
			</div>	
		</body>
	</main>
</Layout>
<style>
	select{
		font-size: 30px;
	}
	input {
		font-size: 30px;
	}
	button {
		font-size: 30px;
	}
	.list {
		color: white;
		font-size: 30px;
	}
	.form {
		display: flex;
		flex-direction: column;
		text-align: center;
		margin-left: 350px;
		margin-right: 350px;
		background-color: rgb(37, 36, 36);
	}
	#exercise-name {
		margin: 30px;
	}
	.list {
		margin: 30px;
	}
	#back {

		margin: 40px;
	}
	#next {
		margin: 40px;
	}

</style>