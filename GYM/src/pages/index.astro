<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 900px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	ul {
		position: relative;
		right: 370px;
	}
	.link-card-grid {
		display: flex;
		padding: 0;
	}
	.imagen {
		border-radius: 12px;
		width: auto;
		height: 500px;
	}
	#imagen3 {
		position: relative;
		right: 2px;
		bottom: 2px;
		width: 502px;
		height: 502px;
		border-top-left-radius: 22px;
	}
	.a:hover {
    	-webkit-filter: brightness(115%);
	}
	.caja {
		width: 100%;
		height: 310px;
	}
	#caja2 {
		padding-left: 70px;
		padding-right: 70px;
	}
</style>
